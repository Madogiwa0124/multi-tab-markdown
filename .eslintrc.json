{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "plugin:vue/recommended"],
  "parserOptions": {
    "ecmaVersion": 2015,
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "never"
    ],
    "vue/require-prop-types": "off",
    "vue/no-v-html": [
      { "excludedFiles": "./src/components/PostForm.vue" }
    ]
  },
  "overrides": [
    {
      "files": "src/*",
      "excludedFiles": "node_modules/*"
    }
  ]
}
